{
  "schemaVersion": "2.0",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/state-read.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/memory-indexer.sh",
            "timeout": 5000,
            "background": true
          }
        ],
        "condition": {
          "every_n_calls": 100
        }
      }
    ]
  }
}
